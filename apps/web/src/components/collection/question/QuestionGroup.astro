---
import Heading from "@components/Heading.astro";
import Question from "@components/collection/question/Question.astro";

interface QuestionData {
  data: {
    title: string;
    group: string;
    answer: string[];
  };
}

interface Props {
  title: string;
  questions: QuestionData[];
}

const { title, questions } = Astro.props;
---

<div class="flex flex-col gap-6">
  <Heading as="h2" class="text-h5 sm:text-h4" set:text={title} />
  <div class="flex flex-col gap-4">
    {questions.map(question => <Question title={question.data.title} answer={question.data.answer} />)}
  </div>
</div>

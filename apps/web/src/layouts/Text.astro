---
import Heading from "@components/Heading.astro";
import Section from "@components/Section.astro";
import Default from "@layouts/Default.astro";
import Trim from "@components/global/Trim.astro";
import Footer from "@components/global/Footer.astro";
import FooterBorder from "@components/global/FooterBorder.astro";

const { frontmatter } = Astro.props;
---

<Default title={frontmatter.title} description={frontmatter.description}>
  <Section>
    <div class="container-8c">
      <div class="flex flex-col gap-10 md:gap-16">
        <Heading as="h1" class="text-h2 lg:text-h1">{frontmatter.title}</Heading>
        <dl class="border-theme-border flex items-center gap-3.5 border-y py-3 text-sm">
          <dt class="text-theme-foreground-bold font-bold">Last updated</dt>
          <dd>8 November 2024</dd>
        </dl>
        <div class="prose text-sm">
          <slot name="default" />
        </div>
      </div>
    </div>
  </Section>
  <Fragment slot="footer">
    <footer id="p_footer-group">
      <Footer />
      <FooterBorder />
      <Trim />
    </footer>
  </Fragment>
</Default>

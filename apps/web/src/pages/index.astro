---
import Banner from "@components/global/Banner.astro";
import Default from "@layouts/Default.astro";
import Hero from "@components/pages/home/Hero.astro";
import Intro from "@components/pages/home/Intro.astro";
import Section from "@components/Section.astro";
import ServicesGrid from "@components/collection/service/ServicesGrid.astro";
import ServicesIntro from "@components/collection/service/ServicesIntro.astro";
import WhyChooseUs from "@components/pages/home/WhyChooseUs.astro";

const title = "Specialist CDM, BSA Principal Designer, and Health and Safety support for the construction industry.";
const description = "We provide bespoke construction services to clients across the UK.";
---

<Default title={title} description={description}>
  <Fragment slot="header">
    <header id="p_header-group" class="bg-theme-background theme-dark">
      <Banner />
      <Hero />
    </header>
  </Fragment>
  <Section>
    <div class="flex flex-col gap-16 sm:gap-20 md:gap-24 lg:gap-28">
      <div class="container">
        <Intro />
      </div>
      <div class="container">
        <WhyChooseUs />
      </div>
      <div class="container">
        <div class="flex flex-col gap-10 sm:gap-14 md:gap-18 lg:gap-22">
          <ServicesIntro />
          <ServicesGrid />
        </div>
      </div>
    </div>
  </Section>
</Default>
